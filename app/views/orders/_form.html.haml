= form_with(model: order, local: true) do |f|
  - if @order.errors.any?
    #error_explanation
      %h2=raw t('errors.template.header', count: @order.errors.count, model: t('activerecord.models.order'))
      %p= t('errors.template.body')
      %ul
        - @order.errors.full_messages.each do |message|
          %li=raw message

  .field
    = f.label :name, t('.name')
    = f.text_field :name, id: :order_name, size: 40
  .field
    = f.label :address, t('.address_html')
    = f.text_area :address, id: :order_address, rows: 3, cols: 40
  .field
    = f.label :email, t('.email')
    = f.email_field :email, id: :order_email, size: 40
  .field
    %div#pay-type-component

  .actions
    = f.submit t('.submit')
