= form_with(model: order, local: true) do |f|
  - if @order.errors.any?
    #error_explanation
      %h2= "#{pluralize(@order.errors.count, "error")} prohibited this order from being saved:"
      %ul
        - @order.errors.full_messages.each do |message|
          %li= message

  .field
    = f.label :name
    = f.text_field :name, id: :order_name, size: 40
  .field
    = f.label :address
    = f.text_area :address, id: :order_address, rows: 3, cols: 40
  .field
    = f.label :email
    = f.email_field :email, id: :order_email, size: 40
  .field
    %div#pay-type-component

  .actions
    = f.submit 'Place Order'
