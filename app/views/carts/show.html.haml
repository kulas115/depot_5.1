%article
  - if notice
    %aside#notice= notice

  %h2 Your Cart
  %table
    - @cart.line_items.each do |line_item|
      %tr
        %td.quantity= line_item.quantity
        %td= line_item.product.title
        %td.price= number_to_currency(@cart.total_price)
  = button_to "Empty Cart", @cart, method: :delete, data: { confirm: 'Are you sure?'}
